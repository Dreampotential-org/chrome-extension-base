{
    "manifest_version": 2,
    "name": "Screen Recorder",
    "description": "Chrome extesntion to record screen",
    "version": "0.0.1",
    "browser_action": {
        "default_icon": "favicon.png",
        "default_popup": "popup.html"
    },
    "background": {
        "page": "background.html"
    },
    "permissions": [
        "activeTab",
        "<all_urls>",
        "webRequest",
        "webRequestBlocking"
    ],
    "commands": {
        "toggle-recording": {
            "suggested_key": {
                "default": "Alt+R"
            },
            "description": "Toggle recording"
        }
    }
}