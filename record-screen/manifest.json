{
  "manifest_version": 3,
  "name": "Screen Recorder",
  "description": "Chrome extension to record screen",
  "version": "0.0.5",
  "action": {
    "default_icon": "favicon.png",
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [{
    "resources": ["background.html"],
    "matches": ["<all_urls>"]
  }],
  "host_permissions": [
    "<all_urls>"
  ],
  "commands": {
    "toggle-recording": {
      "suggested_key": {
        "default": "Alt+R"
      },
      "description": "Toggle recording"
    }
  }
}
